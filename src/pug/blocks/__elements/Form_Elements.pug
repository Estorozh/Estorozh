extends ../main.pug
block head 
  title Form Elemets
  link(rel="stylesheet", href="../../assets/css/Form_Elements.css")

include ./text-field/text-field
include ./dropdown/dropdown
include ./checkbox/checkbox
include ./radio-buttons/radio-buttons
include ./toggle/toggle
include ./like-buttons/like-buttons
include ./rate-button/rate-button
include ./buttons/buttons

block body
  .block
    h3 text-field
    span default
    +text-field('text','EMAIL')
    h3 text-field
    span hover/focus
    +text-field('text','This is pretty awesome')(class="color-75")
    h3 dropdown
    span DEFAULT
    +dropdown(["спальни","кровати","ванные комнаты"],'text','Сколько будет гостей','dropdown','default')
    h3 masked text field
    span default
    +text-field('date','')
    .wrapper
      h3 date dropdown
      +dropdown('','date','','date dropdown')(class="dropdown--small")
    .wrapper
      h3 date dropdown
      +dropdown('','date','','date dropdown')(class="dropdown--small")
    h3 filter date dropdown
    +dropdown('','text','19 авг - 23 авг')(class=["size-medium",'arrow--down','color-75'])
    h3 subscribe text field
    +text-field('text','Email')(class=['size-medium','arrow--forward'])
  
  .block1
    +checkbox('Checkbox Buttons')
    h3 Radio Buttons
    +radio-button()
    +toggle('Toggle')
    h3 like button
    +like-buttons(2,'dislake')
    +like-buttons(12,'like')
    h3 rate button
    +rate-button('stars-left')
    +rate-button('stars-right')

  .block
    h3 Range slider
    .range
      input(type="text" class="js-range-slider" name="my_range" value="")
    h3 Buttons
      .buttons-line
        +button('CLICK ME')(class=['btn--enable','btn--fill'])
        +button('CLICK ME')(class=['btn--disable','btn--fill'])
      .buttons-line
        +button('CLICK ME')(class=['btn--enable', 'btn--border'])
        +button('CLICK ME')(class=['btn--disable', 'btn--border'])
      .buttons-line
        +button('CLICK ME')(class=['btn--enable','btn--simple'])
        +button('CLICK ME')(class=['btn--disable','btn--simple'])
      .buttons-line
        +button('ПЕРЕЙТИ К ОПЛАТЕ')(class=['btn--fill','btn--big'])
    h3 pagination
      .pagination
      span.pagination--text 1-12 из 100+ вариантов аренды
  .block.block-dropdown
    h3 dropdown
    span default
    +dropdown(["спальни","кровати","ванные комнаты"],'text','2 спальни, 2 кровати...')(class="size-medium")
    h3 dropdown
    span Expanded
    +dropdown(["спальни","кровати","ванные комнаты"],'text','2 спальни, 2 кровати...')(class=["size-medium",'expanded'])
  .block.block-dropdown
    h3 dropdown
    span default
    +dropdown(["взрослые","дети","младенцы"],'text','Сколько гостей')(class="size-medium")
  .block.block-dropdown
    h3 dropdown
    span default
    +dropdown(["взрослые","дети","младенцы"],'text','2 спальни, 2 кровати...')(class="size-medium")

block footer
  script(src='../../Form_Elements.js')